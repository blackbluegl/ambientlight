<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ambient.control"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="auto">
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
  
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.ambient.control.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.ambient.control.sceneryconfiguration.SceneryProgramChooserActivity"
            android:label="@string/title_activity_sceneries_chooser" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.ambient.control.sceneryconfiguration.ProgramEditorActivity"
            android:label="@string/title_activity_program_editor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

            </intent-filter>
        </activity>
        <activity
            android:name="org.ambient.control.sceneryconfiguration.SceneryConfigEditDialogHolder"
            android:label="@string/title_activity_dialog_holder" >
        </activity>
        
        <receiver android:name="org.ambient.widgets.RoomSwitchesWidgetProvider" >
            <intent-filter >
                <action 
                    android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidgetprovider" />
        </receiver>
        
    <service android:name="org.ambient.widgets.UpdateWidgetService"></service> 
    </application>



</manifest>