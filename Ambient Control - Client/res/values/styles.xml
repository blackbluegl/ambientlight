<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light" />

    <color name="RoomFloor">#151515</color>
    <color name="RoomWall">#4d4d4d</color>
    <color name="roomChooserChoosen">#707070</color>
    <color name="roomChooserUnChoosen">#000000</color>
    <color name="textColorBlack">#000000</color>
    <color name="textColorWhite">#FFFFFF</color>
    <color name="defaultGrey">#888888</color>
    <color name="darkGrey">#333333</color>

    <style name="boldRoomLabel">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="normalRoomLabel">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#C0C0C0</item>
    </style>

    <style name="groupHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/defaultGrey</item>
        <item name="android:textSize">15.0sp</item>
    </style>

    <style name="groupDescription">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textSize">12.0sp</item>
    </style>

</resources>